<% layout('./layouts/boilerplate') %>
<!-- Load the `mapbox-gl-geocoder` plugin. -->
<script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.7.0/mapbox-gl-geocoder.min.js"></script>
<link rel="stylesheet"
    href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.7.0/mapbox-gl-geocoder.css" type="text/css">

<!-- Promise polyfill script is required -->
<!-- to use Mapbox GL Geocoder in IE 11. -->
<script src="https://cdn.jsdelivr.net/npm/es6-promise@4/dist/es6-promise.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/es6-promise@4/dist/es6-promise.auto.min.js"></script>
    <div id="map"></div>

    <h1 class=" text-center mt-3">All Campgrounds</h1>
        <div class="mb-3">
            <a href="/campgrounds/new">Add Campground</a>
        </div>
        <% for( let camp of campgrounds ) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(camp.images.length) {%>
                            <img class="img-fluid" src="<%= camp.images[0].url %>" alt="image">
                            <% }else{ %>
                                <img class="img-fluid"
                                    src="https://martialartsplusinc.com/wp-content/uploads/2017/04/default-image.jpg"
                                    alt="image">
                                <% }%>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= camp.title %>
                            </h5>
                            <p class="card-text">
                                <%= camp.description %>
                            </p>
                            <p>Price: $<%= camp.price %>/Night
                            </p>
                            <p class="card-text"><small class="text-muted">
                                    <%= camp.location %>
                                </small></p>
                            <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">
                                View <%= camp.title %>
                            </a>
                        </div>
                    </div>
                </div>

            </div>
            <% } %>

                <script>
                    const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
                    let campgrounds = <%- JSON.stringify(campgrounds) %>;
                </script>
                <script src="/JavaScripts/clusterMap.js"></script>