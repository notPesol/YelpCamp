<% layout('./layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
    </div>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= camp._id%>?_method=PUT" method="POST" novalidate class="validate-form"
            enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="campground[title]" id="title" value="<%= camp.title %>"
                    required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location"
                    value="<%= camp.location %>" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Add more Image(s)</label>
                <input class="form-control" type="file" name="image" multiple id="image" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground price</label>
                <div class="input-group">
                    <span class="input-group-text" id="p">$</span>
                    <input id="price" name="campground[price]" type="number" class="form-control" placeholder="0.00"
                        aria-label="price" aria-describedby="p" min="0" step="0.01" value="<%= camp.price %>" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="campground[description]" id="description"
                    required><%= camp.description %></textarea>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <% camp.images.forEach((img, index)=> { %>
                    <img class="img-thumbnail" src="<%= img.url %> " alt="...">
                    <div class="form-check-inline">
                        <input type="checkbox" name="deleteImages[]" value="<%= img.filename %> "
                            id="image<%= index %>">
                        <label for="image<%= index %>">delete?</label>
                    </div>
                    <% }) %>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Campground</button>
            </div>
        </form>
        <a href="/campgrounds/<%= camp._id %>">Cancel</a>
    </div>